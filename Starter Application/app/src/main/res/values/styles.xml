<resources>
    <!-- Spinner DatePicker Style -->
    <style name="SpinnerDatePicker" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:datePickerStyle">@style/SpinnerDatePickerStyle</item>
    </style>

    <style name="SpinnerDatePickerStyle" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
    </style>

    <!-- Outlined buttons -->
    <style name="BlueGrayOutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/button_bluegray</item>
        <item name="strokeColor">@color/button_bluegray</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="iconTint">@color/button_bluegray</item>
    </style>

    <!-- Filled exit button -->
    <style name="ExitButtonFilled" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/button_bluegray</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">20dp</item>
    </style>
</resources>
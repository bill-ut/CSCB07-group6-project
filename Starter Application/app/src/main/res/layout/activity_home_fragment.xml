<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- 1. Email at the top -->
    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="user@example.com"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 2. Questions button below Email -->
    <Button
        android:id="@+id/questionnaireRedirect"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        android:text="Questions"
        android:layout_width="200dp"
        android:textSize="16sp"
        app:icon="@drawable/ic_questions_24"
        app:iconGravity="start"
        app:iconSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEmail" />

    <!-- 3. Support Resources under Questions -->
    <Button
        android:id="@+id/supportButton"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:text="Support Resources"
        app:icon="@drawable/ic_support_24"
        app:iconGravity="start"
        app:iconSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questionnaireRedirect" />

    <!-- 4. Logout anchored at bottom -->

    <Button
        android:id="@+id/tipsRedirect"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:text="Plan and Tips"
        app:icon="@drawable/ic_tips_24"
        app:iconGravity="start"
        app:iconSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/supportButton" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/emergencyInfoRedirect"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:textSize="16sp"
        android:padding="16dp"
        android:text="Emergency Info"
        app:icon="@drawable/ic_emergency_24"
        app:iconGravity="start"
        app:iconSize="28dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tipsRedirect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:id="@+id/remindersRedirect"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:textSize="16sp"
        android:padding="16dp"
        android:text="Reminders"
        app:icon="@drawable/ic_reminder_24"
        app:iconGravity="start"
        app:iconSize="28dp"
        app:layout_constraintTop_toBottomOf="@id/emergencyInfoRedirect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_offwhite"
    tools:context=".HomeFragment">
    

    <!-- Email -->
    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="consciousidler61@gmail.com"
        android:textColor="@color/text_dark"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Buttons: style updated -->
    <Button
        android:id="@+id/questionnaireRedirect"
        style="@style/BlueGrayOutlinedButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Questions"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        app:icon="@drawable/ic_questions_24"
        app:iconGravity="textStart"
        app:iconSize="28dp"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/supportButton"
        style="@style/BlueGrayOutlinedButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Support Resources"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:icon="@drawable/ic_support_24"
        app:iconGravity="textStart"
        app:iconSize="28dp"
        app:layout_constraintTop_toBottomOf="@id/questionnaireRedirect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/tipsRedirect"
        style="@style/BlueGrayOutlinedButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Plan and Tips"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:icon="@drawable/ic_tips_24"
        app:iconGravity="textStart"
        app:iconSize="28dp"
        app:layout_constraintTop_toBottomOf="@id/supportButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/emergencyInfoRedirect"
        style="@style/BlueGrayOutlinedButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Emergency Info"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:icon="@drawable/ic_emergency_24"
        app:iconGravity="textStart"
        app:iconSize="28dp"
        app:layout_constraintTop_toBottomOf="@id/tipsRedirect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/remindersRedirect"
        style="@style/BlueGrayOutlinedButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Reminders"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:icon="@drawable/ic_reminder_24"
        app:iconGravity="textStart"
        app:iconSize="28dp"
        app:layout_constraintTop_toBottomOf="@id/emergencyInfoRedirect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/logoutButton"
        style="@style/BlueGrayOutlinedButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

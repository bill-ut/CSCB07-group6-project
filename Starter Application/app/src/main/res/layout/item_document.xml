<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/documentNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Document Name" />

            <TextView
                android:id="@+id/documentDescriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:text="Description"
                android:visibility="gone" />

            <!-- NEW: Clear file attached indicator -->
            <TextView
                android:id="@+id/fileAttachedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Ž File attached - Tap to view"
                android:textColor="#607D8B"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <Button
            android:id="@+id/viewFileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View"
            android:textColor="#607D8B"
            style="?android:attr/buttonBarButtonStyle"
            android:visibility="gone"
            android:layout_marginEnd="8dp"
             />

        <Button
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textColor="#607D8B"
            android:layout_marginEnd="8dp"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textColor="#607D8B"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

</androidx.cardview.widget.CardView>